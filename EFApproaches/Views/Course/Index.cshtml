@model IEnumerable<EFApproaches.DAL.Entities.Course>

@{
    ViewBag.Title = "List of Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span class="titleValue">@item.Title</span>
        </td>
        <td>
            <span class="creditsValue">@item.Credits</span>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseID }, new { @class = "editCourse" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseID }, new { @class = "detailsCourse" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseID }, new { @class = "deleteCourse" })
        </td>
    </tr>
}
</table>
